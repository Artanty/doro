{
    "event_bus_hooks": [
        {
            "on": {
                "event": "ASK_BACK_URLS"
            },
            "push": {
                "type": "ANSWER",
                "payload": {
                    "project_id": "doro",
                    "back_url": "http://localhost:3201"
                }
            },
            "lives": 1
        },
        {
            "on": {
                "event": "ASK_SSE_PAYLOAD"
            },
            "push": {
                "type": "ANSWER",
                "payload": {
                    "project_id": "doro",
                    "back_url": "http://localhost:3201"
                }
            },
            "lives": 1
        }
    ],
    "interceptors": [
        {
            "on": "REQUEST",
            "url_pattern": "/^http:\/\/localhost:3201\/(event|event-state)(\/.*)?$/",
            "data": [
                {
                    "target": "headers",
                    "key": "Authorization",
                    "valueHandler": {
                        "source": "localStorage",
                        "prop": "accessToken",
                        "prepend": "Bearer "
                    } 
                },
                {
                    "target": "headers",
                    "key": "X-Web-Host-URL",
                    "valueHandler": {
                        "source": "window",
                        "prop": "location.origin"
                    } 
                }
            ]
        },
        {
            "on": "RESPONSE",
            "url_pattern": "/^http:\/\/localhost:3201\/(event|event-state)(\/.*)?$/",
            "push": {
                "type": "TRIGGER_ACTION",
                "action": "SET_CONFIG_HASH",
                "include_request": true,
                "include_response": true
            },
            "project_id": "doro@web"
        }
    ],
    "todo": "добавить сборку этой секции при serve/build"
}
